{%- css %}.postlist { counter-reset: start-from {{ (postslistCounter or postslist.length) + 1 }} }{% endcss %}
<ol reversed class="postlist">
	{% for post in postslist | reverse %}
		<li class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
			<div class="circle"></div>
			<time class="postlist-date"
						datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
			<a href="{{ post.url }}" class="postlist-link">{% if post.data.title %}{{ post.data.title }}{% else %}
					<code>{{ post.url }}</code>{% endif %}</a>
			<span class="postlist-item-description">{{ post.data.description }}</span>
		</li>
	{% endfor %}
</ol>
